@model IEnumerable<Products.Models.CategoryProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h5 style="color:green"> @TempData["msg"]</h5>
<h5 class="text-success">@ViewBag.Success</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryProductId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CategoryProductId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoryProductId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Json File" class="btn btn-danger" />
        </div>
    </div>
}
@using (Html.BeginForm("Import", "CategoryProducts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="jsonFile" />
            <input type="submit" value="Import" class="btn btn-danger" />
        </div>
    </div>
}
</style>






